<div class="contain-to-grid">  
  
  <nav class="top-bar">
    <ul>
      <li class="name">
        <% logo = image_tag("sf_logo.png") %>
        <%= link_to logo, root_path %>
      </li>
      <li class="toggle-topbar"><a href="#"></a></li>
    </ul>
    <section>
      <ul class="left">
        <li class="divider"></li>
        <% if user_signed_in? %>
          <% if current_user.time_tracking == true %>
            <li> <%= active_link_to 'Zeiterfassung', timetracking_path %></li>
            <li class="divider"></li>
          <% end %>
          <% if current_user.admin == true %>
            <li class="has-dropdown">
              <a href="#" class="">Verwaltung</a>
              <ul class="dropdown">
                <li><%= active_link_to 'Benutzer', users_path %></li>
                <li><%= active_link_to 'Filialen', stores_path %></li>
                <li><%= active_link_to 'Zeiterfassung', shifts_path %></li>
              </ul>
            </li>
            <li class="divider"></li>
          <% end %>
          <li><%= active_link_to 'Logout', destroy_user_session_path, :method => 'delete' %>  </li>
        <% else %>
          <li><%= active_link_to 'Login', new_user_session_path %></li>
        <% end %>
      </ul>
    </section>
  </nav>


</div>
