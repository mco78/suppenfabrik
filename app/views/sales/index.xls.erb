<table border="1">
  <tr>
    <th>ID</th>
    <th>Datum</th>
    <th>Filiale</th>
    <th>User</th>
    <td>Produkt</td>
    <th>Betrag</th>
  </tr>
  <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.id %></td>
        <td><%= sale.date.strftime("%d.%m.%y") %></td>
        <td> 
          <% if Store.exists?(sale.store_id) %>
            <%= Store.find(sale.store_id).name %>
          <% else %>
            --
          <% end %>
        </td>
        <td><%= User.find(sale.user_id).name %></td>
        <td><%= sale.product %></td>
        <td><%= sale.value %></td>
      </tr>
    <% end %>
</table>



