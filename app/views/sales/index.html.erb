<div class="row">
	<div class="twelve columns">
		<h2>Endabrechnung</h2>
		<h5>Datum: <strong><%= @checkout.date %></strong><br>
			<% unless @store.nil? %>
				Filiale: <strong><%= @store.name %></strong>
			<% end %>
		</h5>
		<div>
			<p><em>Dev-Info:</em><br>
			ID: <%= @checkout.id %><br>
			Date: <%= @checkout.date %> <br>
			<% unless @store.nil? %>
				Store: <%= @store.name %><br>
			<% end %>
			User: <%= @user.name %> </p>
		</div>
	</div>
</div>

<div class="row">
	<div class="twelve columns">
		<h3>Produktums√§tze erfassen (Schritt 1 von 4)</h3>
		<% @products.each do |product| %>
			<% sale = @sales.find_by_product_id(product.id) %>
			<div class="fields">
				<% if sale.nil? %>
					<%= form_for [@checkout, @sale], :remote => true do |f| %>
						<%= f.hidden_field :checkout_id, :value => @checkout.id %>
						<%= f.hidden_field :user_id, :value => @user.id %>
			      		<%= f.hidden_field :store_id, :value => @store.id %>
			      		<%= f.hidden_field :date, :value => @checkout.date %>
			      		<%= f.hidden_field :product_id, :value => product.id %>
			      		<div class="row">
							<div class="two mobile-one columns">
								<label class="right inline">
									<%= product.name %>: 
								</label>
							</div>
							<div class="two columns">
								<%= f.number_field :value, :class => 'submittable' %>
							</div>
							<div class="one colums"></div>
						</div>
					<% end %>
				<% else %>
					<%= form_for [@checkout, sale], :remote => true do |f| %>
						<%= f.hidden_field :checkout_id, :value => @checkout.id %>
						<%= f.hidden_field :user_id, :value => @user.id %>
			      		<%= f.hidden_field :store_id, :value => @store.id %>
			      		<%= f.hidden_field :date, :value => @checkout.date %>
			      		<%= f.hidden_field :product_id, :value => product.id %>
			      		
						<div class="row">
							<div class="two mobile-one columns">
								<label class="right inline">
									<%= product.name %>: 
								</label>
							</div>
							<div class="two columns">
								<%= f.number_field :value, :class => 'submittable' %>
							</div>
							<div class="one colums"></div>
						</div>
					<% end %>
				<% end %>
			</div>
		<% end %>
	</div>
</div>


