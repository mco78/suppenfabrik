<h1>User bearbeiten</h1>

<%= form_for(@user, :html => { :class => "custom"} ) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>	

  <fieldset>
    <legend>Benutzerrechte</legend>
    <div class="row">
      <div class="four columns">
        <%= f.label :user_management %><%= f.check_box :user_management %>
      </div>
      <div class="four columns">
        <%= f.label :time_tracking %><%= f.check_box :time_tracking %>
      </div>
      <div class="four columns">
        <%= f.label :time_tracking_admin %><%= f.check_box :time_tracking_admin %>
      </div>
    </div>
  </fieldset>
  <br>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Show', @user %> |
