<h3>Übersicht User</h3>

<table>
	<thead>
		<th>Name</th>
		<!-- <th>Erstellt am</th> -->
		<th>Admin</th>
		<th>Zeiterfassung</th>
		<th></th>
		<th></th>
		<th></th>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.name %></td>
				<!-- <td><%= user.created_at.strftime("%d.%m.%y %H:%M") %></td> -->
				<td>
					<% if user.admin == true %>
						<span class="success label">
					<% else %>
						<span class="alert label">
					<% end %>
					<%= user.admin %>
					</span>
				</td>
				<td>
					<% if user.time_tracking == true %>
						<span class="success label">
					<% else %>
						<span class="alert label">
					<% end %>
					<%= user.time_tracking %>
					</span>
				</td>
				<td><%= link_to 'anzeigen', user %></td>
				<td><%= link_to 'bearbeiten', edit_user_path(user) %></td>
				<td><%= link_to 'löschen', user, :confirm => 'Sicher?', :method => :delete %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'Neuer User', new_user_path %>